<% if @user.errors.any? %>
	<div id="error_explanation">
	<div class="alert alert-danger">
		<%= pluralize(@user.errors.count, "error") %> prevented this form from successful submission.
	</div>
	<ul>
		<% @user.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
	<% end %>
	</ul>
</div>
<% end %>
